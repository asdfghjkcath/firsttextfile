utangForm.addEventListener('submit', (e) => {
  e.preventDefault();
  const name = document.getElementById('utang-name').value;
  const amount = Number(document.getElementById('utang-amount').value);
  const type = document.getElementById('utang-type').value;
  const note = document.getElementById('utang-note').value;

  if (editType === 'utang') {
    utangList[editIndex] = { name, amount, type, note, paid: utangList[editIndex].paid };
  } else {
    utangList.push({ name, amount, type, note, paid: false });
  }

  saveData();
  renderUtangs();
  utangForm.reset();
  editIndex = null;
  editType = null;
});
